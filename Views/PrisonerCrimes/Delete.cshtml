@model EgzaminoProjektas.Models.PrisonerCrime

@{
    ViewData["Title"] = "Ištrinti";
}

<h1>Ištrinti</h1>

<h3>Are tikrai norite ištrinti kalinio nusikaltimą?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Crime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Crime.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prisoner)
        </dt>
        <dd class = "col-sm-10">
            @Model.Prisoner.GetFullName()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CrimeId" />
        <input type="hidden" asp-for="Date" />
        <input type="hidden" asp-for="PrisonerId" />
        <input type="submit" value="Ištrinti" class="btn btn-danger" /> |
        <a asp-action="Index">Grįžti atgal</a>
    </form>
</div>
