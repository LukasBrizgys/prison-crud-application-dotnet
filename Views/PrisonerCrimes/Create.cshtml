@model EgzaminoProjektas.Models.PrisonerCrime

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PrisonerCrime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CrimeId" class="control-label"></label>
                <select asp-for="CrimeId" class ="form-control" asp-items="ViewBag.CrimeId"></select>
                <span asp-validation-for="CrimeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" placeholder="MMMM-mm-DD" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrisonerId" class="control-label"></label>
                <select asp-for="PrisonerId" class ="form-control" asp-items="ViewBag.PrisonerId"></select>
                <span asp-validation-for="PrisonerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sukurti" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Grįžti į sąrašą</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
